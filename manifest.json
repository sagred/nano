{
    "manifest_version": 3,
    "name": "Nano Search",
    "version": "1.0.0",
    "description": "Local AI-powered search through your browsing history and bookmarks",
    "permissions": [
      "tabs",
      "history",
      "bookmarks",
      "storage",
      "unlimitedStorage",
      "scripting",
      "commands",
      "activeTab"
    ],
    "commands": {
      "show-text-options": {
        "suggested_key": {
          "default": "Ctrl+M",
          "mac": "Command+M"
        },
        "description": "Show text modification options"
      }
    },
    "background": {
      "service_worker": "dist/background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["dist/content-scripts.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["dist/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_title": "Nano Search"
    }
}