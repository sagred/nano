{
  "manifest_version": 3,
  "name": "Nano Search",
  "version": "1.0.0",
  "description": "Local AI-powered search through your browsing history and bookmarks",
  "permissions": [
      "sidePanel",
      "tabs",
      "scripting",
      "commands",
      "history",
      "bookmarks",
      "storage",
      "unlimitedStorage"
  ],
  "side_panel": {
      "default_path": "src/sidepanel.html"
  },
  "host_permissions": [
      "<all_urls>"
  ],
  "commands": {
      "show-text-options": {
          "suggested_key": {
              "default": "Ctrl+M",
              "mac": "Command+M"
          },
          "description": "Show text modification options"
      }
  },
  "background": {
      "service_worker": "src/background/index.ts",
      "type": "module"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["src/content-scripts/index.ts"],
          "run_at": "document_end"
      }
  ],
  "web_accessible_resources": [
      {
          "resources": ["assets/*"],
          "matches": ["<all_urls>"]
      }
  ],
  "action": {
      "default_title": "Nano Search - Open Side Panel",
      "default_panel": "sidepanel.html" 
  }
}